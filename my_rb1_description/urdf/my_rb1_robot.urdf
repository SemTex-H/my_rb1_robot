<?xml version="1.0" ?>

<robot name="robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <material name="Black">
        <color rgba="0 0 0 1"/>
    </material>
    <material name="Blue">
        <color rgba="0 0 1 0.3"/>
    </material>
    <material name="Green">
        <color rgba="0 1 0 1"/>
    </material>
    <material name="Red">
        <color rgba="1 0 0 1"/>
    </material>

    <link name="base_footprint">
    </link>


    <joint name="base_footprint_base_link_joint" type="fixed">
        <origin rpy="0 0 0" xyz="0 0 0.20" />
        <child link="base_link" />
        <parent link="base_footprint" />
    </joint>
    <link name="base_link">
        <inertial>
            <mass value="22" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.5087499999999999" ixy="0" ixz="0" iyy="0.5087499999999999" iyz="0" izz="0.6875" />
        </inertial>

        <collision>
            <geometry>
                <cylinder length="0.3" radius="0.25"/>
            </geometry>
        </collision>

        <visual>
            <geometry>
                <cylinder length="0.3" radius="0.25"/>
            </geometry>
            <material name="Blue"/>
        </visual>
    </link>


    <!-- RIGHT WHEEL-->
    <joint name="base_link_right_wheel_joint" type="continuous">
        <origin rpy="0 0 0" xyz="0 -0.2 -0.15" />
        <child link="right_wheel" />
        <parent link="base_link" />
        <axis rpy="0 0 0" xyz="0 1 0" />
        <limit effort="10000" velocity="1000" />
    </joint>
    <link name="right_wheel">
        <inertial>
            <mass value="2.125" />
            <origin xyz="0 0 0"/>
            <inertia ixx="0.00023125" ixy="0" ixz="0" iyy="0.00023125" iyz="0" izz="0.0003125"/>
        </inertial>

        <collision>
            <origin xyz="0 0 0" rpy="-1.5708 0 0" />
            <geometry>
                <cylinder length="0.03" radius="0.025"/>
            </geometry>
        </collision>
        <visual>
            <origin xyz="0 0 0" rpy="-1.5708 0 0" />
            <geometry>
                <cylinder length="0.03" radius="0.025"/>
            </geometry>
            <material name="Red"/>
        </visual>
    </link>


    <!-- LEFT WHEEL-->
    <joint name="base_link_left_wheel_joint" type="continuous">
        <origin rpy="0 0 0" xyz="0 0.2 -0.15" />
        <child link="left_wheel" />
        <parent link="base_link" />
        <axis rpy="0 0 0" xyz="0 1 0" />
        <limit effort="10000" velocity="1000" />
    </joint>
    <link name="left_wheel">
        <inertial>
            <mass value="2.125" />
            <origin xyz="0 0 0"/>
            <inertia ixx="0.00023125" ixy="0" ixz="0" iyy="0.00023125" iyz="0" izz="0.0003125"/>
        </inertial>

        <collision>
            <origin xyz="0 0 0" rpy="-1.5708 0 0" />
            <geometry>
                <cylinder length="0.03" radius="0.025"/>
            </geometry>
        </collision>
        <visual>
            <origin xyz="0 0 0" rpy="-1.5708 0 0" />
            <geometry>
                <cylinder length="0.03" radius="0.025"/>
            </geometry>
            <material name="Red"/>
        </visual>
    </link>


    <!-- FRONT CASTER WHEEL-->
    <joint name="base_link_front_caster_joint" type="fixed">
        <origin rpy="0 0 0" xyz="0.1 0 -0.15" />
        <child link="front_caster" />
        <parent link="base_link" />
        <axis rpy="0 0 0" xyz="0 0 0" />
        <joint_properties friction="0.0" />
    </joint>
    <link name="front_caster">
        <inertial>
            <mass value="0.125" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.000003125" ixy="0" ixz="0" iyy="0.000003125" iyz="0" izz="0.000003125"/>
        </inertial>

        <collision>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
            <material name="Green"/>
        </visual>
    </link>


    <!-- BACK CASTER WHEEL-->
    <joint name="base_link_back_caster_joint" type="fixed">
        <origin rpy="0 0 0" xyz="-0.1 0 -0.15" />
        <child link="back_caster" />
        <parent link="base_link" />
        <axis rpy="0 0 0" xyz="0 0 0" />
        <joint_properties friction="0.0" />
    </joint>
    <link name="back_caster">
        <inertial>
            <mass value="0.125" />
            <origin xyz="-0.1 0 -0.15" rpy="0 0 0" />
            <inertia ixx="0.000003125" ixy="0" ixz="0" iyy="0.000003125" iyz="0" izz="0.000003125"/>
        </inertial>

        <collision>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
            <material name="Green"/>
        </visual>
    </link>


    <!-- LASER-->
    <joint name="base_link_front_laser_joint" type="fixed">
        <origin rpy="0 0 0" xyz="0.25 0 0.075" />
        <child link="front_laser" />
        <parent link="base_link" />
        <joint_properties friction="0.0" />
    </joint>
    <link name="front_laser">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="0.75" />
            <inertia ixx="0.000252666666667" ixy="0" ixz="0" iyy="0.000252666666667" iyz="0" izz="0.0005"/>
        </inertial>
        <visual>
            <origin xyz="3.14 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.03" length="0.075"/>
            </geometry>
            <material name="Red"/>
        </visual>
        <collision>
            <origin xyz="3.14 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.10"/>
            </geometry>
        </collision>
    </link>


    <!-- Gazebo color and other-->
    <gazebo reference="base_link">
        <material>Gazebo/Black</material>
    </gazebo>
    <gazebo reference="right_wheel">
        <material>Gazebo/Red</material>
    </gazebo>
    <gazebo reference="left_wheel">
        <material>Gazebo/Red</material>
    </gazebo>
    <gazebo reference="front_caster">
        <turnGravityOff>false</turnGravityOff>
        <material>Gazebo/Green</material>
    </gazebo>
    <gazebo reference="back_caster">
        <turnGravityOff>false</turnGravityOff>
        <material>Gazebo/Green</material>
    </gazebo>
    <gazebo reference="front_laser">
        <material>Gazebo/Yellow</material>
    </gazebo>


    <!-- Gazebo plugin-->
    <gazebo>
        <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">
            <alwaysOn>true</alwaysOn>
            <updateRate>20</updateRate>
            <leftJoint>base_link_left_wheel_joint</leftJoint>
            <rightJoint>base_link_right_wheel_joint</rightJoint>
            <wheelSeparation>0.4</wheelSeparation>
            <wheelDiameter>0.05</wheelDiameter>
            <torque>10</torque>
            <commandTopic>cmd_vel</commandTopic>
            <odometryTopic>odom</odometryTopic>
            <odometryFrame>odom</odometryFrame>
            <robotBaseFrame>base_link</robotBaseFrame>
        </plugin>
    </gazebo>

    <gazebo reference="front_laser">
        <sensor type="ray" name="head_hokuyo_sensor">
            <pose>0 0 0 0 0 0</pose>
            <visualize>true</visualize>
            <update_rate>20</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>720</samples>
                        <resolution>1</resolution>
                        <min_angle>-1.570796</min_angle>
                        <max_angle>1.570796</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.20</min>
                    <max>10.0</max>
                    <resolution>0.01</resolution>
                </range>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.01</stddev>
                </noise>
            </ray>
            <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_laser.so">
                <topicName>/scan</topicName>
                <frameName>sensor_laser</frameName>
            </plugin>
        </sensor>
    </gazebo>

</robot>